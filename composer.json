{
    "name": "cakephpkitchen/cakeadminlte",
    "description": "CakeAdminPHP skeleton application and dashboard",
    "homepage": "http://cakeadmin.me",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/cakephp": "3.7.*",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "~1.0",
        "almasaeed2010/adminlte": "2.4.0-alpha",
        "cebe/markdown": "dev-master",
        "cakedc/users": "5.1.0",
        "authorizenet/authorizenet": "~1.9",
        "muffin/slug": "^1.2",
        "friendsofcake/crud": "^5.0",
        "neomerx/json-api": "^1.0",
        "admad/cakephp-jwt-auth": "^2.2",
        "nicolab/php-ftp-client": "^1.4",
        "chuyskywalker/rolling-curl": "^3.1",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "cakephp/bake": "^1.9.0",
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/debug_kit": "^3.17.0",
        "josegonzalez/dotenv": "3.*",
        "phpunit/phpunit": "^5|^6",
        "psy/psysh": "@stable"
    },
    "suggest": {
        "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible filter system for preprocessing and minification.",
        "dereuromark/cakephp-ide-helper": "After baking your code, this keeps your annotations in sync with the code evolving from there on for maximum IDE and PHPStan compatibility."
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "AdminLTE\\": "./plugins/AdminLTE/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "AdminLTE\\Test\\": "./plugins/AdminLTE/tests"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
